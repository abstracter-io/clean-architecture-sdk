{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",

    "outDir": "./build",
    "incremental": true,
    "declaration": true,
    "removeComments": true,

    "baseUrl": ".",
    "allowJs": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"],
  "exclude": []
}
